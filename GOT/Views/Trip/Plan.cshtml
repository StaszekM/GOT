@model GOT.ViewModels.TripViewModel

<h1>Planowanie wycieczki</h1>
<hr />

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <h5>Statystyki wycieczki</h5>
            <table class="table table-striped table-bordered ">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Score)
                        </th>
                        <th>
                            Suma wejść
                        </th>
                        <th>
                            Długość
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.Score)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Elevation)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Distance)
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            Nr
                        </th>
                        <th>
                            Nazwa trasy
                        </th>
                        <th>
                            Suma wejść
                        </th>
                        <th>
                            Długość
                        </th>
                        <th>
                            Obszar
                        </th>
                        <th>
                            Punkt początkowy
                        </th>
                        <th>
                            Punkt końcowy
                        </th>
                        <th>
                            Punkty
                        </th>
                    </tr>

                </thead>
                @{
                    int index = 1;
                }
            <tbody>
                @foreach (var item in Model.Paths) {
                    <tr>
                        <td>
                            @index
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Name)
                        </td>
                        <td>
                            @(item.IsFromAToB ? item.ElevationAB : item.ElevationBA)
                        </td>
                        <td>
                            @(item.IsFromAToB ? item.DistanceAB : item.DistanceBA)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Area)
                        </td>
                        <td>
                            @(item.IsFromAToB ? item.PointA : item.PointB)
                        </td>
                        <td>
                            @if (Model.PointNames.Count() % 2 == 0) {
                                @(item.IsFromAToB ? item.PointB : item.PointA)
                            } else {
                                <div class="form-group"><input type="text" class="form-control" /></div>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Score)
                        </td>
                    </tr>
                    index++;
                }
                @if (Model.PointNames.Count() % 2 == 0) {
                    <tr>
                        <td>@index</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td><div class="form-group"><input type="text" class="form-control" /></div></td>
                        <td></td>
                        <td></td>
                    </tr>
                } else {
                    <tr>
                        <td>@index</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>@Model.PointNames.Last()</td>
                        <td><div class="form-group"><input type="text" class="form-control" /></div></td>
                        <td></td>
                    </tr>
                }

            </tbody>
            </table>
        </div>

    </div>
</div> 